@model List<CodingEvents.Models.EventTag>

@if(Model.Count == 0)
            {
                <p>No elements with the given tag.</p>
            }
            else
            {
                <h1>Events Tagged: @Model[0].Tag.Name</h1>

                <ul>
                    @foreach(EventTag evtTag in Model)
                    {
                        <li>@evtTag.Event.Name</li>
                    }
                </ul>
            }
